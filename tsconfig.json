{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Bundler",
  
      "lib": ["ES2020", "DOM"],
      "declaration": true,
      "declarationMap": true,
      "outDir": "dist",
  
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true
    },
    "include": ["src"]
  }
  